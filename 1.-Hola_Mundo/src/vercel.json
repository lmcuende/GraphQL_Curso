{
    "version": 2,
    "builds": [
        {
            "src": "build/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "build/schema/**/*.graphql"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)", 
            "des": "build/server.js"
        }
    ]
}